{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,

    "baseUrl": "./" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "@/*": ["./src/*"],
      "pages/*": ["./src/pages/*"],
      "components/*": ["./src/components/*"],
      "constants/*": ["./src/constants/*"],
      "images/*": ["./src/images/*"],
      "utils/*": ["./src/utils/*"],
      "router/*": ["./src/router/*"],
      "hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/pages/canvas/RippleFloatOnTheWater/waterRipple.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
